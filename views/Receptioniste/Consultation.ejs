        <div id="page-wrapper" style= "margin-left: 19%">
            <div class="container-fluid">
                <div id="kifkif">
<div class="title content">
    Gestion Consultation <p style="float: right;"></p>
</div>
                	<div class="content1">
                    <table class="table table-dark">
                        <thead>
                            <th>Date Consultation </th>
                            <th>Medecin</th>
                            <th>Patient</th>
                            <th>Hour</th>
                        </thead>
                        <% for( var i=0; i<Object.keys(Consultation).length ; i++) { %>
                        <tr>
                            <td><%=Consultation[i].Date%></td>
                            <td><%=Consultation[i].Doctor%></td>
                            <td><%=Consultation[i].Patient%></td>
                            <td>
                              <td>
                                <button style="float: right;" class="btn btn-primary" data-toggle="modal" data-target="#Consult<%=Consultation[i].id%>" ><i class="fa fa-eye"></i> Consulter</button>
                              </td>
                            </td>
                        </tr>
                        <%}%>
                    </table>
                </div>     
            	</div>
        	</div>       	
        </div>
    </div>

<% for( var i=0; i<Object.keys(Consultation).length ; i++) { %>
<div class="modal fade" id="Consult<%=Consultation[i].id%>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <!-- Manarach chfama f database Ama hay forlulaire just badel -->
                <label > Date :</label>
                <input class='form-control'  disabled value="<%=Consultation[i].Date%>"  > <!-- thot variable fil disabled value -->
            </div>   
            <div class="form-group">
                <label > Medecin :</label>
                <input class='form-control'  disabled value="<%=Consultation[i].Doctor%>"  > <!-- thot variable fil disabled value -->
            </div>
            <div class="form-group">
              <label > Patient :</label>
              <input class='form-control'  disabled value="<%=Consultation[i].Patient%>"  > <!-- thot variable fil disabled value -->
          </div>
          <div class="form-group">
            <label > Heure :</label>
            <input class='form-control'  disabled value="<%=Consultation[i].Hour%>"  > <!-- thot variable fil disabled value -->
        </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Modifier</button>
        </div>
      </div>
    </div>
  </div>
<% } %>
